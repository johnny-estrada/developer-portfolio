---
import Logo from './ui/Logo.astro';
---

<footer class="footer" role="contentinfo">
  <div class="footer__container wrapper">
    <div class="bg-pattern-rings2"></div>

    <div class="flex-item">
      <Logo />
      <p>
        Based in San Diego, I'm a front-end developer passionate about building
        accessible web apps that users love.
      </p>
    </div>

    <div class="footer__content">
      <div class="flex-ite">
        <h4>BROWSE</h4>
        <a href="/">Home</a>
        <a href="/about">About</a>
        <a href="/#projects">Projects</a>
        <a href="/contact">Contact</a>
      </div>

      <div class="flex-ite">
        <h4>PROJECTS</h4>
        <a href="/projects/bug-tracker">Bug Tracker App</a>
      </div>

      <div class="flex-ite">
        <h4>SOCIAL</h4>
        <div class="social-item">
          <img
            src="/icons/icon-location.svg"
            alt=""
            width="20px"
            height="20px"
          />
          San Diego, CA
        </div>
        <div class="social-item">
          <a href="https://github.com/johnny-estrada" class="footer_contact">
            <img
              src="/icons/icon-github.svg"
              alt=""
              width="20px"
              height="20px"
            />
            Github
          </a>
        </div>
        <div class="social-item">
          <a href="https://www.linkedin.com/in/estrada-johnny/">
            <img
              src="/icons/icon-linkedin.svg"
              alt=""
              width="20px"
              height="20px"
            />
            LinkedIn
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="footer__adoration">Built by Johnny Estrada - 2023</div>
</footer>

<style lang="scss">
  .footer {
    background: var(--neutral-800);
    padding: 60px 0 0px 0;
    // outline: green solid 1px;

    &__container {
      position: relative;
      border-bottom: var(--white) solid 1px;
      // outline: blue solid 1px;
    }

    @media (min-width: 768px) {
      &__container {
        display: flex;
        border-bottom: var(--white) solid 1px;
      }
    }

    &__content {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      padding-bottom: 9.375rem;
      margin-bottom: 1.25rem;
      width: 100%;
    }

    &__adoration {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-bottom: 60px;
      margin-top: 20px;
    }

    .flex-item {
      display: flex;
      flex-wrap: wrap;
      flex-direction: column;
      align-items: center;
      padding-bottom: 60px;

      @media (min-width: 768px) {
        & {
          align-items: flex-start;
          margin-right: 50px;
          max-width: 400px;
        }
      }
    }

    .flex-ite {
      padding: 0 20px 0 0;
      margin-bottom: 60px;
    }

    p {
      color: var(--stone-300);
      font-size: 1rem;
      line-height: 1.625rem;
      text-align: center;
      margin-top: 0.625rem;

      @media (min-width: 768px) {
        & {
          text-align: left;
        }
      }
    }

    .social-item {
      display: flex;
      align-items: center;
      // text-align: center;
      color: var(--stone-300);
      font-size: 1rem;
      line-height: 1.625rem;
      margin-bottom: 0.625rem;
    }

    h4 {
      font-size: 1.125rem;
      line-height: 1.75rem;
      margin-bottom: 0.625rem;
    }

    a {
      display: flex;
      font-size: 1rem;
      line-height: 1.625rem;
      letter-spacing: 0.143125rem;
      cursor: pointer;
      margin-bottom: 0.5rem;
    }

    a:hover {
      color: var(--accent-green-400);
      transition: color 200ms ease-in-out;
      text-decoration: underline;
    }

    a:focus {
      color: var(--accent-green-400);
    }

    a:active {
      color: var(--text-white);
    }

    img {
      margin-right: 0.5rem;
    }
  }

  .bg-pattern-rings2 {
    position: absolute;
    top: 220px;
    left: -250px;

    background-image: url('/icons/pattern-rings.svg');
    background-repeat: no-repeat;
    width: 530px;
    height: 129px;
    z-index: 1;
  }
</style>
