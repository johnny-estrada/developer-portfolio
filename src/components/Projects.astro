      <div class="contain">
        <picture>
          <source
            media="(min-width: 600px)"
            srcset="/images/thumbnail-project-2-large.webp"
            width="540"
            height="auto"
          />

          <img
            src="/images/thumbnail-project-2-small.webp"
            class="image"
            alt=""
            max-width="100%"
            height="auto"
          />
          <h3>INTERPRETER IN GO</h3>
          <ul>
            <li>GO</li>
          </ul>
          <p class="middle">UNDER CONSTRUCTION</p>
