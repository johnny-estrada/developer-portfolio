<style lang="scss">
  .projects {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 80px 0;
    background: var(--neutral-500);

    p {
      font-size: 20px;
      font-weight: bold;
    }

    @media (min-width: 900px) {
      & {
        padding: 120px 0;
      }
    }

    &__content {
      display: flex;
      justify-content: center;
      gap: 20px;
    }

    h2 {
      margin-bottom: 80px;
      font-weight: 700;
      font-size: var(--main-heading);
      line-height: 40px;
