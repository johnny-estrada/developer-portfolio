<style lang="scss">
  .projects {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 80px 0;
    background: var(--neutral-500);

    p {
      font-size: 20px;
      font-weight: bold;
    }

    @media (min-width: 900px) {
      & {
        padding: 120px 0;
      }
    }

    &__content {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 20px;
    }

    @media (min-width: 1164px) {
      &__content {
        justify-content: left;
      }
    }

    h2 {
      margin-bottom: 80px;
      font-weight: 700;
      font-size: var(--main-heading);
      line-height: 40px;
      letter-spacing: -1.13636px;
    }

    @media (min-width: 900px) {
      h2 {
        margin-bottom: 120px;
      }
    }

    img {
      opacity: 1;
      transition: 0.5s ease;
      backface-visibility: hidden;
      margin-bottom: 20px;
    }

    h3 {
      font-weight: 700;
      font-size: 24px;
      line-height: 32px;
      margin-bottom: 7px;
    }

    ul {
      display: flex;
      gap: 18px;
      margin-bottom: 20px;
      color: var(--stone-300);
    }

    nav {
      display: flex;
      margin-bottom: 80px;
      gap: 30px;

      a {
        cursor: pointer;
        color: var(--text-white);
        border-bottom: 2px solid var(--accent-green-400);
        padding-bottom: 10px;

        &:hover {
          color: var(--accent-green-400);
          transition: color 200ms ease-in-out;
        }

        &:focus {
          color: var(--accent-green-400);
        }

        &:active {
          color: var(--text-white);
        }
      }
    }

    /*****************************/
    /*** Project Cover Images ***/
    /***************************/
    .contain {
      margin-bottom: 20px;
    }

    @media (min-width: 900px) {
      .contain {
        position: relative;
      }

      .middle {
        flex-direction: column;
        gap: 48px;
        transition: 0.5s ease;
        opacity: 0;
        position: absolute;
        top: 45%;
        left: 50%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
      }

      .contain:hover .image {
        opacity: 0.3;
      }

      .contain:hover .middle {
        opacity: 1;
      }
    }
  }
</style>
