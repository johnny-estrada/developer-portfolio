    /***************************/

    @media (min-width: 900px) {
      .contain {
        position: relative;
      }

      .middle {
        flex-direction: column;
        gap: 48px;
        transition: 0.5s ease;
        opacity: 0;
        position: absolute;
        top: 45%;
        left: 50%;
        transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
        text-align: center;
      }

      .contain:hover .image {
        opacity: 0.3;
