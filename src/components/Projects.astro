    }

    h3 {
      font-weight: 700;
      font-size: var(--step-0);
      letter-spacing: -1px;
      margin-bottom: 16px;
      text-align: center;
    }

    img {
      opacity: 1;
      transition: 0.5s ease;
      backface-visibility: hidden;
      margin-bottom: 20px;
    }

    h4 {
      font-weight: 700;
      font-size: 24px;
      line-height: 32px;
      margin-bottom: 7px;
    }

    ul {
      display: flex;
      gap: 18px;
      margin-bottom: 20px;
      color: var(--stone-300);
    }

    nav {
      display: flex;
      margin-bottom: 80px;
      gap: 30px;

      a {
        cursor: pointer;
        color: var(--text-white);
        border-bottom: 2px solid var(--accent-green-400);
        padding-bottom: 10px;

        &:hover {
          color: var(--accent-green-400);
          transition: color 200ms ease-in-out;
        }

        &:focus {
          color: var(--accent-green-400);
        }

        &:active {
          color: var(--text-white);
        }
      }
    }

