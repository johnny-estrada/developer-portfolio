<section class="about">
  <h2>ABOUT</h2>
  <div class="wrapper">
    <div class="about__content">
      <div class="bg-pattern-ring"></div>
      <picture>
        <source
          media="(min-width: 600px)"
          srcset="/images/avatar-desktop.webp"
          max-width="100%"
          height="auto"
        />
        <img
          src="/images/avatar-mobile.webp"
          alt="A man sitting behind a sunset, relaxed, with an amazing smile."
          max-width="100%"
          height="auto"
        />
      </picture>

      <div class="about__text">
        <h3>Get to know me</h3>
        <p>
          I'm Johnny, a full-stack web developer passionate about crafting great
          applications using the web.
        </p>
        <a href="/about">
          LEARN MORE
          <span class="visually-hidden">about Johnny and his background.</span>
        </a>
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  .about {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 80px 0;

    @media (min-width: 600px) {
      &.about {
        margin-bottom: 100px;
      }

      h2 {
        margin-block: 100px;
      }
    }

    &__content {
      display: flex;
      flex-direction: column;
      align-items: center;
      min-width: 100%;
      // border: solid green 1px;
      margin-left: 0;
    }

    @media (min-width: 600px) {
      &__content {
        flex-direction: row;
      }
    }

    @media (min-width: 900px) {
      &__content {
        margin-bottom: 180px;
      }
    }

    &__text {
      display: flex;
      flex-direction: column;
    }

    @media (min-width: 600px) {
      &__text {
        margin-left: 0px;
      }
    }

    h2 {
      font-weight: 700;
      font-size: var(--main-heading);
      line-height: 40px;
      letter-spacing: -1.13636px;
      margin-bottom: 80px;
    }

    img {
      margin: 0 auto 40px auto;
    }

    @media (min-width: 600px) {
      img {
        margin-right: 32px;
        width: 100%;
        max-width: 350px;
      }
    }

    @media (min-width: 900px) {
      img {
        margin-right: 32px;
        width: 100%;
        max-width: 540px;
      }
    }

    h3 {
      font-weight: 700;
      font-size: var(--step-0);
      text-align: center;
      letter-spacing: -1px;
      margin-bottom: 10px;
    }

    p {
      max-width: 445px;
      color: var(--stone-300);
      font-size: var(--body-text);
      line-height: 26px;
      text-align: center;
      margin-bottom: 32px;
    }

    @media (min-width: 600px) {
      h3,
      p {
        text-align: left;
      }
    }

    a {
      font-size: 16px;
      font-weight: 700;
      line-height: 26px;
      letter-spacing: 2.286px;
      cursor: pointer;
      color: var(--text-white);
      border-bottom: 2px solid var(--accent-green-400);
      width: 120px;
      height: 42px;
      margin: 0 auto;

      &:hover {
        color: var(--accent-green-400);
        transition: color 200ms ease-in-out;
      }

      &:focus {
        color: var(--accent-green-400);
      }

      &:active {
        color: var(--text-white);
      }
    }

    @media (min-width: 600px) {
      a {
        margin: 0;
      }
    }

    .bg-pattern-ring {
      background-image: url("/icons/pattern-rings.svg");
      background-repeat: no-repeat;
      width: 50%;
      height: 100%;
      position: absolute;
      left: 50%;
      top: 90%;
      z-index: -1;

      @media (min-width: 600px) {
        & {
          left: 80%;
          top: 90%;
        }
      }
      @media (min-width: 900px) {
        & {
          width: 25%;
          left: 75%;
          top: 65%;
        }
      }
    }
  }
</style>
