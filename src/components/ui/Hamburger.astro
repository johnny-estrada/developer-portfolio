<nav role="navigation">
  <div id="menuToggle">
    <input id="menuInput" type="checkbox" />
    <span></span>
    <span></span>
    <span></span>

    <ul id="menu">
      <li><a href="/">Home</a></li>
      <li><a href="/about/">About</a></li>
      <li><a href="/#projects">Projects</a></li>
      <li><a href="/#contact">Contact</a></li>
    </ul>
  </div>
</nav>

<script>
  const toggle = document.getElementById('menuToggle');
  const setMenu = document.getElementById('menu');
  const checkBox = document.getElementById('menuInput');
  const setOverflow = document.getElementById('body');
  const links = document.querySelectorAll('ul li');

  toggle.addEventListener('click', (e) => {
    e.stopPropagation();

    if (checkBox.checked && setMenu.style.display === 'none') {
      setMenu.style.display = 'block';
      setOverflow.style.overflow = 'hidden';
    } else {
      setMenu.style.display = 'none';
      setOverflow.style.overflow = 'scroll';
      checkBox.getAttribute('checked')
      checkBox.setAttribute('checked', 'false')
      checkBox.checked = false;
    }
  });


</script>

<style lang="scss">
  #menu {
    display: none;
    position: fixed;
    width: 100%;
    height: 100%;
    box-shadow: 0 0 10px #85888c;
    top: 0;
    left: 0;
    padding: 50px;
    background-color: var(--neutral-800);
    -webkit-font-smoothing: antialiased;
    transform-origin: 0% 0%;
    // transform: translate(-88%, 0%);
    transition: transform 1000ms cubic-bezier(0.77, 0.2, 0.05, 1);
    z-index: 2;
  }

  #menuToggle {
    display: flex;
    position: relative;
    top: 3px;
    right: 3px;
    flex-direction: column;
    z-index: 3;
    -webkit-user-select: none;
    user-select: none;
  }

  #menuToggle input {
    display: flex;
    width: 41px;
    height: 32px;
    position: absolute;
    top: -5px;
    right: -1px;
    cursor: pointer;
    opacity: 0;
    z-index: 4;
  }

  #menuToggle span {
    display: flex;
    width: 2.5rem;
    min-height: 2px;
    margin-bottom: 0.5rem;
    background: #ffffff;
    border-radius: 3px;
    z-index: 3;
    transform-origin: 5px 0px;
    transition: transform 0.5s cubic-bezier(0.77, 0.2, 0.05, 1),
      background 0.5s cubic-bezier(0.77, 0.2, 0.05, 1), opacity 0.55s ease;
    z-index: 3;
  }

  #menuToggle span:first-child {
    transform-origin: 0% 0%;
  }

  #menuToggle span:nth-last-child(2) {
    transform-origin: 0% 100%;
  }

  #menuToggle input:checked ~ span {
    opacity: 1;
    transform: rotate(45deg) translate(-3px, -1px);
    background: #fff;
  }
  #menuToggle input:checked ~ span:nth-last-child(3) {
    opacity: 0;
    transform: rotate(0deg) scale(0.2, 0.2);
  }

  #menuToggle input:checked ~ span:nth-last-child(2) {
    transform: rotate(-45deg) translate(0, -1px);
  }

  #menu li {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px 0;
    transition-delay: 2s;
    z-index: 2;
  }

  #menuToggle input:checked ~ ul {
    transform: none;
  }

  a {
    position: relative;
    text-decoration: none;
    color: #1e1e23;
    opacity: 1;
    font-size: 1.5em;
    font-weight: 400;
    transition: 200ms;
    z-index: 1;
  }

  a:hover {
    color: var(--accent-green-400);
  }

  ul {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0;
    list-style-type: none;
  }
</style>
