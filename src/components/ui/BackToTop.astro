<a href={'#top'} id="myBtn">
  <img src="/icons/icon-chevronup.svg" alt="" width="24px" height="24px" />
</a>

<style lang="scss">
  #myBtn {
    display: none;
    position: fixed;
    bottom: 30px;
    right: 30px;
    z-index: 2;
    border: none;
    outline: none;
    background-color: var(--accent-green-400);
    cursor: pointer;
    padding: 8px;
    border-radius: 50px;

    &:hover {
      background-color: var(--accent-green-400);
      box-shadow: 0px 0px 50px 1px rgba(78, 225, 160, 0.25);
      transition: all 300ms ease-in-out;
      transform: scale(0.95);
    }

    &:focus {
      border: none;
      background-color: var(--accent-green-400);
      box-shadow: 0px 0px 50px 1px rgba(78, 225, 160, 0.25);
      transform: scale(0.95);
    }

    &:active {
      border: none;
      color: #212121;
      background-color: var(--accent-green-400);
      box-shadow: 0px 0px 50px 1px rgba(78, 225, 160, 0.25);
      transform: scale(1.1);
    }
    @media (min-width: 600px) {
      & {
        padding: 15px;
      }
    }
  }
</style>

<script>
  let mybutton = document.getElementById('myBtn');

  // When the user scrolls down 20px from the
  // top of the document, show the button
  window.onscroll = function () {
    scrollFunction();
  };

  function scrollFunction() {
    if (
      document.body.scrollTop > 20 ||
      document.documentElement.scrollTop > 20
    ) {
      mybutton.style.display = 'block';
    } else {
      mybutton.style.display = 'none';
    }
  }
</script>
