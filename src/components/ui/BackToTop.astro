<a href="/#top" id="myBtn">
  <img src="/icons/icon-chevronup.svg" alt="" width="24px" height="24px" />
</a>

<style lang="scss">
  #myBtn {
    display: none; /* Hidden by default */
    position: fixed; /* Fixed/sticky position */
    bottom: 30px; /* Place the button at the bottom of the page */
    right: 30px; /* Place the button 30px from the right */
    z-index: 2; /* Make sure it does not overlap */
    border: none; /* Remove borders */
    outline: none; /* Remove outline */
    background-color: var(--accent-green-400); /* Set a background color */
    cursor: pointer; /* Add a mouse pointer on hover */
    padding: 8px; /* Some padding */
    border-radius: 50px; /* Rounded corners */

    &:hover {
      background-color: var(--accent-green-400);
      box-shadow: 0px 0px 50px 1px rgba(78, 225, 160, 0.25);
      translate: 2px 2px;
      transition: all 300ms ease-in-out;
      transform: scale(0.95);
    }

    &:focus {
      border: none;
      background-color: var(--accent-green-400);
      box-shadow: 0px 0px 50px 1px rgba(78, 225, 160, 0.25);
      transform: scale(0.95);
    }

    &:active {
      border: none;
      color: #212121;
      background-color: white;
      transform: scale(1.1);
    }
    @media (min-width: 600px) {
      & {
        padding: 15px;
      }
    }
  }
</style>

<script>
  let mybutton = document.getElementById('myBtn');

  // When the user scrolls down 20px from the
  // top of the document, show the button
  window.onscroll = function () {
    scrollFunction();
  };

  function scrollFunction() {
    if (
      document.body.scrollTop > 20 ||
      document.documentElement.scrollTop > 20
    ) {
      mybutton.style.display = 'block';
    } else {
      mybutton.style.display = 'none';
    }
  }
</script>
