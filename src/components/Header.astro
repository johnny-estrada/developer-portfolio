---
import Logo from "./ui/Logo.astro";
import Hamburger from "./ui/Hamburger.astro";
import Navigation from "./ui/Navigation.astro";
---

<header class="header" role="banner">
  <div class="wrapper header__container">
    <Logo />

    <nav class="header__desktop-nav" role="navigation" aria-label="Main nav">
      <Navigation />
    </nav>
    <nav class="header__mobile-nav" role="navigation" aria-label="Main nav">
      <Hamburger />
    </nav>
  </div>
</header>

<style lang="scss">
  .header {
    &__container {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      padding-top: 1.5625rem;
    }
    &__desktop-nav {
      display: flex;
      gap: 2rem;
    }
    @media screen and (max-width: 768px) {
      &__desktop-nav {
        display: none;
      }
    }

    @media screen and (min-width: 768px) {
      &__mobile-nav {
        display: none;
      }
    }
  }
</style>
