---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

export interface Props {
  pageTitle: string;
}

const { pageTitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="description"
      content="Front-End Web Developer passionate about building web apps that users love."
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href="https://www.johnnyestrada.dev" />
    <link rel="canonical" href="https://www.johnnyestrada.dev/about" />
    <link rel="canonical" href="https://www.johnnyestrada.dev/bug-tracker" />
    <link rel="canonical" href="https://www.johnnyestrada.dev/#projects" />
    <link rel="canonical" href="https://www.johnnyestrada.dev/#contact" />
    <title>{pageTitle}</title>
  </head>

  <body id="body">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
